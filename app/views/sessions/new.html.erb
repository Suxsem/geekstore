<% provide(:title, "Login") %>
<%= bootstrap_form_for(:session, url: login_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f| %>
  <%= f.text_field :name, label: "Nome", icon: "user" %>
  <%= f.password_field :password, label: "Password", icon: "lock" %>
  <%= f.form_group do %>
    <%= f.submit "Login", class: "btn btn-primary btn-block" %>
  <% end %>
<% end %>

<p>Nuovo utente? <%= link_to "Registrati ora!", signup_path %></p>