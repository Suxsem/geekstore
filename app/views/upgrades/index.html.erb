<% provide(:title, "Potenziamenti: #{@product.name}") %>
<%= will_paginate %>

<%= button_to "Aggiungi potenziamento", new_upgrade_path, params: { product_id: @product.id }, class: "btn btn-primary", style: "margin-bottom: 20px", method: :get %>

<table class="table table-striped">
      <thead>
        <tr>
          <th><span class="glyphicon glyphicon-barcode" aria-hidden="true"></span></th>
          <th><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></th>
          <th><span class="glyphicon glyphicon-euro" aria-hidden="true"></span></th>
          <th><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></th>
          <th><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></th>
        </tr>
      </thead>
      <tbody>

      <% @upgrades.each do |upgrade| %>
        <tr>
          <th scope="row"><%= upgrade.id %></th>
          <td><%= upgrade.name %></td>
          <td><%= "#{upgrade.price}â‚¬" %></td>
          <td><%= link_to '', edit_upgrade_path(upgrade), class: "glyphicon glyphicon-edit" %></td>
          <td><%= link_to '', upgrade, method: :delete, class: "glyphicon glyphicon-trash", data: { confirm: "ATTENZIONE! Tutti gli ordini che includono questo potenziamento verranno eliminati. Continuare?" } %></td>
        </tr>
      <% end %>
      
      </tbody>
</table>

<%= will_paginate %>