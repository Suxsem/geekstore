<% provide(:title, 'Categorie') %>
<%= will_paginate %>

<table class="table table-striped">
      <thead>
        <tr>
          <th><span class="glyphicon glyphicon-barcode" aria-hidden="true"></span></th>
          <th><span class="glyphicon glyphicon-inbox" aria-hidden="true"></span></th>
          <th><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></th>
          <th><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></th>
        </tr>
      </thead>
      <tbody>

      <% @categories.each do |category| %>
        <tr>
          <th scope="row"><%= category.id %></th>
          <td><%= category.name %></td>
          <td><%= link_to '', edit_category_path(category), class: "glyphicon glyphicon-edit" %></td>
          <td><%= link_to '', category, method: :delete, class: "glyphicon glyphicon-trash", data: { confirm: "ATTENZIONE! Tutti i prodotti appartenenti a questa categoria (ed i relativi potenziamenti e ordini) verranno eliminati. Continuare?" } %></td>
        </tr>
      <% end %>
      
      </tbody>
</table>

<%= will_paginate %>